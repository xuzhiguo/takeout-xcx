/* pages/evaluate/evaluate.wxss */
.page_bd {
  position: relative;
  padding: .5rem 0;
  box-sizing: border-box;
  height: 100%;
  background: #eee;
}

.evaluate-info {
  background: #fff;
  padding: .5rem;
}

.evaluate-info .header {
  display: flex;
}

.good-image {
  width: 3rem;
  height: 3rem;
}

.good-image image {
  display: block;
  width: 100%;
  height: 100%;
}

.star-info {
  padding-left: 1rem;
  font-size: .75rem;
}

.star icon {
  margin-right: .5rem;
  font-size: 1.2rem;
  color: #ddd;
}

.star icon.active {
  color: #fd9800;
}

.evaluate-edit textarea {
  width: 100%;
  margin-top: .5rem;
  height: 5rem;
  background: #eee;
  padding: .5rem;
  box-sizing: border-box;
  color: #666;
  font-size: .75rem;
}

.submit-btn {
  width: 80%;
  margin: 1rem auto .5rem;
  font-size: 1rem;
  color: #fff;
  background: #fd9800;
  line-height: 2;
}

.submit-btn.active {
  background-color: #f4bd60;
}