/* pages/orderDetail/orderDetail.wxss */
.page_bd {
  position: relative;
  background: #eee;
  padding: .5rem 0;
  box-sizing: border-box;
  height: 100%;
}

.user-info {
  display: flex;
  align-items: center;
  background: #fff;
  padding: .25rem .5rem;
  font-size: .75rem;
  color: #999;
}

.user-right {
  padding-left: .5rem;   
}

.food-info,
.food-info-total,
.order-info {
  position: relative;
  margin-top: .5rem;
  background: #fff;
}

.food-detail {
  display: flex;
  padding: .5rem 0 .5rem .5rem;
  border-bottom: solid 1px #ececec;
}

.food-detail:last-of-type {
  border: none;
}

.food-image {
  width: 3rem;
  height: 3rem;
}

.food-image image {
  display: block;
  width: 100%;
  height: 100%;
}

.food-item-info {
  width: 100%;
  display: flex;
  padding: 0 .5rem;
  color: #999;
  box-sizing: border-box;
  justify-content: space-between;
}


.info-right {
  font-size: .7rem;
}

.calc-box {
  padding: .25rem .5rem;
  border-bottom: solid 1px #ececec;
  font-size: .7rem;
  color: #888;
}

.calc-box .line {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
}

.result {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: .7rem;
  color: #fea611;
  padding: .25rem .5rem;
}

.result .value {
  font-size: 1rem;
}

.order-info {
  padding: .25rem .5rem;
}

.order-info .line {
  display: flex;
  justify-content: space-between;
  font-size: .75rem;
  color: #888;
}

.button-group {
  display: flex;
  justify-content: flex-end;
}

.button-group button {
  margin: .5rem 0 .5rem .25rem;
  padding: .25rem 1rem;
  line-height: 1;
  font-size: .8rem;
  background: #fea611;
  color: #fff;
}

.button-group button.active {
  background: #f4bd60;
}