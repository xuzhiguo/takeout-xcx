.page__bd {
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

.main {
    background-color: #fff;
}

.logo-box {
  width: 100%;
  text-align: center;
}

.logo-box image {
  width: 150rpx;
  border-radius: 50%;
}

.pay-tips {
  text-align: center;
  color: #868686;
  font-size: 34rpx;
}

.pay-title {
  color: #313131;
  padding: 50rpx 0 20rpx;
}

.money-box {
  display: flex;
  align-items: center;
  border-bottom: solid #dedede 1px;
  padding-bottom: 15rpx;
  font-weight: 700;
}

.symbol {
  font-size: 50rpx;
}

.money-box input {
  width: 100%;
  height: 100%;
  padding: 30rpx 30rpx 0;
  box-sizing: border-box;
  font-size: 60rpx;
}

.pay-check {
  display: flex;
  padding: 20rpx 0;
  border-bottom: solid #efefef 1px;
}

.check-left,
.check-right {
  flex: 1;
}

.check-left {
  color: #0e0e0e;
}

.check-left .icon-weixin {
  color: #0bb80e;
  font-size: 60rpx;
}

.check-left .icon-yue {
  color: #f5ac05;
  font-size: 60rpx;
}

.check-right {
  text-align: right;
}

.check-right icon {
  font-size: 50rpx;
  color: #d2d2d2;
}

.check-right .icon-checked {
  color: #fd9800;
}

.pay-box {
  margin: 30rpx 20rpx 0;
}

.pay-btn {
  color: #fff;
  background: #fd9800;
}

button[disabled]:not([type]) {
  background-color: #f8bf6a !important;
  color: #f7e1c0;
}

.click-after {
  background-color: #f8b249 !important;
}

.tips {
  font-size: 30rpx;
  padding: 15rpx;
  color: #d52222;
}